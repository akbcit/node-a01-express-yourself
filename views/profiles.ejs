<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profiles</title>
    <link rel="stylesheet" href="../styles/style.css">
</head>
<body>
    <h1>User Profiles</h1>
    <ul>
        <% profiles.forEach(profile => { %>
            <li>
                <a href="./profiles/<%= profile.id %>"><%= profile.name %></a>
            </li>
        <% }); %>
</body>
</html>