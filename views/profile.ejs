<!-- views/profiles.ejs -->
<body>
    <h2>User Profile</h2>
    <% if (profile) { %>
        <div>
            
            <img src="<%= profile.imagePath %>" alt="<%= profile.name %>">
            <h3><%= profile.name %></h3>
            <!-- <p>ID: <%= profile.id %></p> -->
            <p>Interests: <%= profile.interests.join(', ') %></p>
        </div>
    <% } else { %>
        <p>No profile found.</p>
    <% } %>

        <!-- Links to other profiles (not including the current user) -->
        <% const otherProfiles = allProfiles.filter(otherProfile => otherProfile.id !== profile.id); %>
        <% if (otherProfiles.length > 0) { %>
            <h3>Other Profiles:</h3>
            <ul>
                <% otherProfiles.forEach(otherProfile => { %>
                    <li>
                        <a href="./<%= otherProfile.id %>"><%= otherProfile.name %></a>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No other profiles found.</p>
        <% } %>
    
    <button><a href="/profiles">Back to Profiles</a></button>
</body>